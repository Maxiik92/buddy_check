<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width">

	<title>{ifset title}{include title|stripHtml} | {/ifset}Nette Web</title>
	<link href="{$basePath}/css/reset.css" rel="stylesheet">
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
	<link href="{$basePath}/css/styles.css" rel="stylesheet">
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.1/css/all.min.css" integrity="sha512-5Hs3dF2AEPkpNAR7UiOHba+lRSJNeM2ECkwxUIxC1Q/FLycGTbNapWXB4tP889k5T5Ju8fs4b1P5z/iB4nMfSQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />

	<!-- notyf flash messages -->
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/notyf@3/notyf.min.css">
	<script defer src="https://cdn.jsdelivr.net/npm/notyf@3/notyf.min.js"></script>
	<script defer src="{$basePath}/js/flashMessage.js"></script>
	<script defer src="{$basePath}/js/bootstrapformValidation.js"></script>

</head>

<body>
	<div id="flash-messages" data-flashes="{json_encode($flashes)}"></div>

	{control menu}

	{include content}

	{block scripts}
	{/block}
	<script src="https://unpkg.com/nette-forms@3"></script>
	<script>
		document.addEventListener('DOMContentLoaded', function () {
				// Select all elements with the data-toggle="tooltip" attribute
				const tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-toggle="tooltip"]'));
				// Initialize tooltips for each element
				tooltipTriggerList.forEach(function (tooltipTriggerEl) {
						new bootstrap.Tooltip(tooltipTriggerEl);
				});
		});
	</script>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
